<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="64dip"
    android:orientation="vertical"
    android:padding="8dip"
    >

    <ImageView
        android:id="@+id/hwpush_favicon"
        android:scaleType="centerCrop"
        android:layout_height="36dip"
        android:layout_width="36dip"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:focusable="false"
        android:visibility="visible"
        android:layout_marginLeft="4dip"
        />
    
    <CheckBox android:id="@+id/hwpush_delCheck"
        android:layout_width="32dip"
        android:layout_height="32dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:button="@drawable/hwpush_btn_checkbox_list_star"
        android:gravity="center_vertical"
        android:visibility="invisible"
        android:clickable="false"
        />
    
    <LinearLayout 
        android:id="@+id/hwpush_selfshowmsg_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="12dip"
        android:paddingRight="8dip"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_toRightOf="@id/hwpush_favicon"
        android:layout_toLeftOf="@id/hwpush_delCheck">
        
        <TextView android:id="@+id/hwpush_selfshowmsg_title"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:gravity="center_vertical"
	        android:singleLine="true"
	        android:ellipsize="end"
	        android:typeface="sans"
	        android:textSize="14sp"
	        android:textColor="@color/hwpush_text_color_snapshot_title"
	        android:focusable="false"
	        />
        
	    <TextView android:id="@+id/hwpush_selfshowmsg_content"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical"
	        android:maxLines="1"
	        android:singleLine="true"
	        android:ellipsize="end"
	        android:typeface="sans"
	        android:textSize="11dp"
	        android:textColor="@color/hwpush_text_color_history_url"
	        android:focusable="false"
	        />
        
    </LinearLayout>
    
</RelativeLayout>
